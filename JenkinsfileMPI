pipeline {
    agent any
    options { disableConcurrentBuilds() }
    triggers {
        cron('H 0 * * *')
    }
    environment {
        DOCKER_REPO = 'isomemodb.com:8081'
        EMAIL = 'andreas.neudecker@inwt-statistics.de'
    }
    stages {
        stage('BSMC') {
            when { branch 'master' }
            steps {
                sh '''
                docker build --pull -t $DOCKER_REPO/bmsc-base -f bmsc-base/DockerfileMPI bmsc-base
                docker push $DOCKER_REPO/bmsc-base
                '''
            }
        }

        stage('BSMC + Shiny') {
            when { branch 'master' }
            steps {
                sh '''
                docker pull $DOCKER_REPO/bmsc-base
                docker tag $DOCKER_REPO/bmsc-base bmsc-base
                docker build -t $DOCKER_REPO/bmsc-shiny-base --network host --no-cache -f bmsc-shiny-base/DockerfileMPI bmsc-shiny-base
                docker push $DOCKER_REPO/bmsc-shiny-base
                '''
            }
        }

        stage('ReSources + IsoApp') {
            when { branch 'master' }
            steps {
                sh '''
                docker build --pull -t $DOCKER_REPO/resources-isoapp-base -f resources-isoapp-base/DockerfileMPI resources-isoapp-base
                docker push $DOCKER_REPO/resources-isoapp-base
                '''
            }
        }
    }
    post {
        failure {
           script {
                if (env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'depl') {
                    emailext (
                        attachLog: true,
                        body: "Build of job ${env.JOB_NAME} (No. ${env.BUILD_NUMBER}) has completed\n\nBuild status: ${currentBuild.currentResult}\n\n${env.BUILD_URL}\n\nSee attached log file for more details of the build process.",
                        recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']],
                        to: "${env.EMAIL}",
                        subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}"
                    )
                }
            }
        }
    }
}
